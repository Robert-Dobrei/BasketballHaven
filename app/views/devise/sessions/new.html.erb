<%= javascript_include_tag 'mdb' %>

<style>
  @media (min-width: 1025px) {
  .h-custom-2 {
  height: 80%;
  }
  }

  .img1{
    max-width: 100%; 
    max-height: 100%; 
    height: 120px;  
  }

  section{
    height: 93.8vh;
  }
</style>  

<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">
        <br>
        <div class="px-5 ms-xl-4">
          <img class="img1" src="https://i.imgur.com/mDaj6Rs.png">
          <span class="h1 fw-bold mb-0">Basketball Haven</span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">  
          <div style="width: 23rem;">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
            </div>

            <div class="pt-1 mb-4">
              <%= f.submit "Log in", class: "btn btn-black btn-lg btn-block" %>
            </div>
            <% end %>
            <label>Don't have an account?</label>
            <%= render "devise/shared/links" %> 
          </div>
        </div>
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://i.imgur.com/F3w6sGH.png"
          alt="Login image" class="w-100" style="object-fit: cover; object-position: center; height: 93.8vh">
      </div>
    </div>
  </div>
</section>