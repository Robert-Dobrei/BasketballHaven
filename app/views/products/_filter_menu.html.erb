<!-- _filter_menu.html.erb -->
<%= form_tag products_path, method: :get, class: 'form-inline', id: 'products-form' do %>
  <div class="form-group mb-2">
    <%= label_tag :category_id, 'Filter by category:' %>
    <%= select_tag :category_id, options_for_select(Category.all.pluck(:name, :id), params[:category_id]), prompt: 'All'%>
    <br>
    <%= label_tag :sort_by, 'Sort by price:' %>
    <%= select_tag :sort_by, options_for_select({ 'Low to High' => 'price_asc', 'High to Low' => 'price_desc' }, params[:sort_by]), prompt: 'None'%>
    <br>
    <%= label_tag :search, 'Search:' %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag 'Filter', class: 'btn btn-primary ', style: 'font-size: 12px; padding: 7px 15px;' %>
  </div>

<% end %>